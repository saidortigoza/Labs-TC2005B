<%- include('includes/header.ejs') %>
    <h1>Sitio para registrar nuevos usuarios</h1>
    <main>
        <p>Ingresa los datos del nuevo usuario:</p>
        <form action="/signup" method="POST">
            <label for="nombre">Nombre completo del nuevo usuario: </label>
            <input type="text" name="nombre" required>
            <label for="username">Nombre del nuevo usuario: </label>
            <input type="text" name="username" required>
            <label for="password">Password del nuevo usuario: </label>
            <input type="password" name="password" required>
            <input type="submit" value="Enviar">
        </form>
        <br><br>
        <a href="/">Iniciar sesion</a>
    </br>
<%- include('includes/footer.ejs') %>